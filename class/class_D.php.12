	$nightgown_qty = 0;
	$allinone_qty = 0;
	$nightgown2_qty = 0;

	$sql = "select shop_product_id, qty
	    from orders
	   where pack = '$packno'";
	$result4 = mysql_query($sql, $connect) or die(mysql_error());
	while ($list4 = mysql_fetch_array($result4))
	{
	    if (in_array($list4[shop_product_id], $bigsize_list))
