   function gift_pack_bubigirl($packno, $shop_xp)
   {
	global $connect;

	$gift = "";

	class_D::get_bubilist_array($shop_xp, &$bigsize_list, &$nightgown_list, &$allinone_list, &$normal_list);

	$normal_qty = 0;
